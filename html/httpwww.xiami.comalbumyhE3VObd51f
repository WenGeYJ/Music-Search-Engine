//提交音频
$('#submit_music').hover(function(){
	$(this).find('.show_tips').show();
},function(){
	$(this).find('.show_tips').hide();
});
$('#more_btn').bind("click", function(){
	if (!$(this).hasClass("song_less")) {
		$(this).html('- 更少').addClass("song_less");
		$('.share_btns').hide();
		$('#full_share').show();
	} else {
		$(this).html('+ 更多').removeClass("song_less");
		$('#full_share').hide();
		$('.share_btns').show();
	}
});

function loadAblum(page, limit, delay) {
	$('#loader').removeClass().addClass('loading').html('<b></b>加载中...').show();
	$.ajax({
		url: '/album/songs/id/' + aid + '/page/' + page,
		data: {},
		dataType : 'jsonp',
		cache: false,
		beforeSend: function() {
			$('#loader').removeClass().addClass('loading').html('<b></b>加载中...').show();			
		},
		success: function(data) {
			page++;
			console.log(data);
			setTimeout(function() {
				if (!data.state) {
					if (data.data) {
						var ht = tmpl('tmpl-cdsong', data);
						ht = ht.replace(/\n/g,'');
						$('#track_list > tbody').append(ht);
						$('#loader').removeClass().html('<a href="" onclick="loadAblum('+page+', '+limit+', 0);return false;">点击加载更多</a>').show();
					} else {
						$('#loader').html('').remove();
					}
				}
			}, delay);
		},
		error: function() {
			$('#loader').removeClass().addClass('error').html('<a href="" onclick="loadAblum('+page+', '+limit+', 0);return false;">点击重新加载</a>');
		}
	});
}

</script>


