<script language="javascript">
var aid=2102643991;
var arid = 135;
var search_site = 'http://www.xiami.com';

function page_review(id,num){
	var url = '/album/review/id/'+ encodeURIComponent(id) + '/num/'+ encodeURIComponent(num)+'/nolink/1';
	showDialog(url);
}

function getQuote(type,id){
	var url = '/ajax/getquote/type/'+ encodeURIComponent(type)+'/id/'+encodeURIComponent(id);
	showDialog(url);
}
$(document).ready(function() {

	var delGrade = $(".delGrade");
	$(".grade").hover(function(){
		delGrade.show();
	},function(){
		delGrade.hide();
	});
	delGrade.bind('click',function(){
		var $this = $(this);
		$this.siblings('a').removeClass('selected');
		$.getJSON('/album/review',{grade:0,id:aid,submit:1,mod:'ajax',_xiamitoken:_xiamitoken},function(data){
			if(data.status=='failed'){alert(data.msg);return;}
			$this.siblings('input').val('0');
			window.location.reload();
		});
	});
	/**/
	var target='.grade a';
	//var i=parseInt($('#album_cover .grade_v').val());
	var i = '';
	if(parseInt($('#album_cover .grade_v').val())){
		for (j=0; j<i; j++){$($(target).get(j)).addClass('selected');}
		$('.grade span').text($($(target).get(i-1)).text());
	}
	$(target).mouseover(function(){
		$(target).removeClass('hover').removeClass('selected');
		var i=parseInt($(target).index($(this)[0]));
		for (j=0; j<=i; j++){$($(target).get(j)).addClass('hover');}
		$('.grade span').text($(this).text());
	}).click(function(){
		$(target).removeClass('hover').removeClass('selected');
		var i=parseInt($(target).index($(this)[0]));
		for (j=0; j<=i; j++){$($(target).get(j)).addClass('selected');}
		$('#album_cover .grade_v').val(i+1);
		//$('.grade span').text($(this).text());
	}).mouseout(function(){
		$(target).removeClass('hover').removeClass('selected');
		var i=parseInt($('#album_cover .grade_v').val());
		for (j=0; j<i; j++){$($(target).get(j)).addClass('selected');}
		if(!parseInt($('#album_cover .grade_v').val())){
		$('.grade span').text('');
		}else{
		$('.grade span').text($($(target).get(i-1)).text());
		}
	});
